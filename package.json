{
  "name": "poppo-auto-clicker",
  "version": "1.0.0",
  "description": "Bot humanizado profesional para POPPO Live",
  "main": "electron-main-emulador.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "app": "electron .",
    "app-emulador": "electron electron-main-emulador.js",
    "emulador": "node bot-emulador-adb.js",
    "bot-inteligente": "node bot-inteligente.js",
    "marcar": "node marcar-boton.js",
    "coordenadas": "node encontrar-coordenadas.js",
    "probar-tap": "node probar-tap.js",
    "turbo": "node bot-rafagas.js",
    "normal": "node bot-auto.js",
    "honesto": "node bot-honesto.js",
    "profesional": "node bot-profesional.js",
    "old": "node index.js",
    "dev": "electron . --dev",
    "analizar": "node analizar-batalla.js",
    "analizar-auto": "node analizar-auto.js",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.poppobot.app",
    "productName": "POPPO Bot Emulador",
    "files": [
      "electron-main-emulador.js",
      "electron-emulador.html",
      "bot-emulador-adb.js",
      "click-capturador.py",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dir"
    },
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [
    "automation",
    "puppeteer",
    "humanized"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "puppeteer": "^24.37.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "electron": "^40.3.0",
    "electron-builder": "^25.1.8"
  }
}
